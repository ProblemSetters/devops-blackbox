#!/usr/bin/env bash
blackbox.framework.module.abstract.score.provision() {
  typeset -a args=("$@")

  if ( ! blackbox.framework.flag.enabled STEP_PROVISION ); then
    printf "skip: BLACKBOX_FLAG__STEP_PROVISION=no\n"

    return
  fi

  docker ps -aq | xargs -r docker stop >/dev/null
  docker system prune -af --volumes
  docker run -di --hostname="$BLACKBOX_SPAWN" --name="$BLACKBOX_SPAWN" --privileged --volume="${BLACKBOX_DIR}:${BLACKBOX_DIR}:ro" --volume="${BLACKBOX_USER_QUESTION_DIR}:${BLACKBOX_USER_QUESTION_DIR}:ro" "problemsetters/blackbox:${module_name}"

  : <<< blackbox.module.*.score.provision

  if [ -n "$BLACKBOX_PROVISION_WITH_OPTS" ]; then
    printf "BLACKBOX_PROVISION_WITH_OPTS=%s\n" "$BLACKBOX_PROVISION_WITH_OPTS"
    docker exec -i -w "$BLACKBOX_USER_QUESTION_DIRECTORY" "$BLACKBOX_SPAWN" /bin/bash -c "$BLACKBOX_PROVISION_WITH_OPTS"
  fi
}

