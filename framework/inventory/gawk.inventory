#!/usr/bin/env bash
# @file framework/inventory/gawk.inventory
# @brief https://github.com/ProblemSetters/devops-blackbox/blob/2204/framework/inventory/gawk.inventory
# @description Inventory "gawk"

# @section blackbox.framework.inventory.*

# Provisions the "gawk" inventory
#
# @arg $1 readonly,type=string,default=gawk Inventory name
# @arg $2 type=...string Inventory additional packages
#
# @example
#  # Provision the "gawk" inventory
#  blackbox.framework.inventory.provision gawk
#
# @see blackbox.framework.inventory.provision
blackbox.framework.inventory.gawk() {
  typeset package_name=$1
  typeset -a with_packages=("${@:2}")

  {
    blackbox.framework.trace "${FUNCNAME[0]}" "$*" <<<""
  }

  sed "s/\x1b\[[0-9;]*m//g" <(dpkg-query -W "$package_name" "${with_packages[@]}" 2>&1)

  if ( dpkg-query -L "$package_name" "${with_packages[@]}" &>/dev/null ); then
    false

    return
  fi

  apt-get update

  DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends software-properties-common && {
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends "$package_name" "${with_packages[@]}"
  }
}
