#!/usr/bin/env bash
blackbox.module.aws.check.provision() {
  : <<< blackbox.framework.module.abstract.check.provision:step

  docker exec -i "$BLACKBOX_SPAWN" service docker start

  blackbox.framework.inventory.provision localstack

  docker exec -i "$BLACKBOX_SPAWN" $BASH <<<"tee -a /etc/hosts < <(printf '127.0.0.1\teu-central-1.hackerrankaws.local\n')"
  docker exec -i "$BLACKBOX_SPAWN" $BASH <<<"tee -a /etc/environment < <(printf 'AWS_ENDPOINT_URL=%s\n' 'eu-central-1.hackerrankaws.local')"
}
